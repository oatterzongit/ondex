<!DOCTYPE html>
<html>
<head>
  <title>Ondex</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <div>
      <% if current_user %>
        Welcome, &nbsp;<%= current_user.f_name %>
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <%= link_to 'Logout', session_path('filler'), method: :delete %>
      <% else %>
        <%= link_to 'Login', login_path %>
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <%= link_to 'Sign Up', new_user_path %>
      <% end %>
      &nbsp; | &nbsp;
      <%= link_to 'Home', root_path %>
      &nbsp; | &nbsp;
      <%= link_to 'Put your item Ondex!', new_auction_path %>
    </div>


    <p id="notice"><script>Materialize.toast('<%= notice %>', 3000, 'rounded')</script></p>
  </header>


<%= yield %>

</body>
</html>
